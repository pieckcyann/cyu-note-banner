{
  "extends": "@tsconfig/svelte",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["dom", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "ESNext"
  },
  "types": ["svelte", "node"],
  "include": ["**/*.ts", "**/*.svelte"],
  "exclude": ["node_modules"]
}
